<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-5">
      <h4><mark class="bg-light">ジャンル一覧・追加</mark></h4>
      <!--追加-->
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="col-auto my-5 form-inline">
        <label class="font-weight-bold">ジャンル名</label>
        <%= f.text_field :name ,class: "form-control mx-5" %>
        <%= f.submit "新規登録" ,class: "btn btn-success" %>
      </div>
      <% end %>
      <!--一覧-->
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%=link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      </div>
    </div>
  </div>
</div>