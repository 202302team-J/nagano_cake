<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-5">
      <h4><mark class="bg-light">ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
      <div class="col-auto my-5 form-inline">
        <label class="font-weight-bold">ジャンル名</label>
        <%= f.text_field :name ,class: "form-control mx-5" %>
        <%= f.submit "変更を保存" ,class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>