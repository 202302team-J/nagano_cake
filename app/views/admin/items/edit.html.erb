<div class='container'>
  <div class='row'>
    <div>
      <h1>商品編集</h1>
        <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
      <div class="form">
        <div class="form-body">
      <h4>商品画像</h4>
         <%= f.file_field :image, accept: "image/*" %>

      <h4>商品名</h4>
        <%= f.text_field :name %>

      <h4>商品説明</h4>
        <%= f.text_area :description %>

  <!-- genreモデルに格納しているデータをプルダウンで選択してItemモデルに保存する-->
  <!--:保存カラム(ジャンルID),参照インスタンス(@genres=Genre.all),保存する参照先カラム(ジャンルID),表示する参照先カラム(ジャンル名) -->
      <h4 >ジャンル</h4>
        <%= f.collection_select :genre_id,@genres,:id,:name, include_blank: "--選択してください--" %>

      <h4>税抜価格</h4>
        <%= f.text_field :price %>円

      <h4>販売ステータス</h4>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active_true, "販売中" %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active_false, "販売停止中" %>
      <div>
        <%= f.submit '変更を保存' %>
      </div>
       <% end %>
   </div>
  </div>
   </div>
  </div>
</div

