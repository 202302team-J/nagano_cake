<div class="container add-font">
  <div class="row-4">
    <div class="col-md-10 mx-auto my-5">
      <h2 class="m-0"><mark class="bg-light">商品一覧</mark></h2>

        <!-- 新規登録ボタン-->
        <div class="text-right mr-2">
           <%= link_to new_admin_item_path, class: "btn btn-lg btn-{themecolor}.rounded-circle.p-0 secondary " do %>
             <i class="fas fa-plus-circle"></i>
           <% end %>
        </div>

        <table class="table text-senter">
          <thead class="thead-light">
            <tr class=>
              <th class="col-md-2 text-center">商品ID</th>
              <th class="col-md-4 text-left">商品名</th>
              <th class="col-md-2 text-center">税抜価格</th>
              <th class="col-md-2 text-center">ジャンル</th>
              <th class="col-md-2 text-center">ステータス</th>
            </tr>
          </thead>

          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td class="text-center p-2"><%= item.id %></td>
              <td class="text-left p-2">
                <%= link_to admin_item_path(item), class: "text-reset", style: "text-decoration: black underline" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td class="text-center p-2"><%= item.price.to_s(:delimited) %></td>
              <td class="text-center p-2"><%= item.genre.name %></td>
              <td class="text-center p-2">
                <% if item.is_active == true %>
                  <p class="font-weight-bold text-success">販売中</p>
                <% else %>
                  <p class="font-weight-bold text-secondary">販売停止中</p>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>

        </table>
        <div class="col-2 mx-auto">
          <%= paginate @items %>
        </div>
    </div>
  </div>
</div>