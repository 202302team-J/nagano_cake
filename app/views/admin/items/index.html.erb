<div class="container">
  <div class="row">
    <div>
      <h2>商品一覧</h2>

        <!-- 新規登録ボタン-->
        <div class="text-right">
           <%= link_to new_admin_item_path, class: "btn btn-lg btn-{themecolor}.rounded-circle.p-0 secondary " do %>
             <i class="fas fa-plus-circle"></i>
           <% end %>
        </div>

      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.name %>
              <% end %>
              </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active == true %>
                    販売中
                <% else %>
                    販売停止中
                <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>

      <div>
      　<%= paginate @items %>
      </div>
    </div>
  </div>
</div>
