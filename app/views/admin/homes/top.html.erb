<div class="container add-font">
  <div class="row">
    <div class="col-md-10 mx-auto mt-5">
      <h4 class="mb-4"><mark class="bg-light">注文履歴一覧</mark></h4>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th class="col-md-4">購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order), class:'text-reset', style:"text-decoration: underline" do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
            </td>
            <td>
              <%= order.customer.full_name %>
            </td>
            <td>
              <!--商品の合計数を出す-->
              <% sum=0 %>
              <% order.order_details.each do |order_detail| %>
              <% sum+=order_detail.item_count %>
              <% end %>
              <%= sum %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>