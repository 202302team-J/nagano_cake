<div class="container">
  <div class="row">
    <div>
      <h2>注文履歴一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr><%= order.created_at %></tr>
          <tr></tr>
          <tr><%= order_details.item_count %></tr>
          <tr><%= order.status %></tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>