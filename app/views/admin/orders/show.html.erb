<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto my-1">
      <h4 class="my-3 col-md-3 bg-light">注文履歴詳細</h4>
      <div class="col-auto">
        <div class="row col-auto"><p class="col-md-2">購入者</p>
          <%= link_to admin_customers_path(@order.customer), class:'text-reset', style:"text-decoration: underline" do %>
            <%= @order.customer.full_name %>
          <% end %>
        </div>
        <div class="row col-auto">
          <p class="col-md-2">注文日</p><%= @order.created_at.strftime("%Y/%m/%d ") %>
        </div>
        <div class="row col-auto">
          <p class="col-md-2">配送先</p><%= @order.ship_address %>
        </div>
        <div class="row col-auto">
          <p class="col-md-2">支払方法</p><%= @order.payment_method_i18n %>
        </div>
        <div class="row col-auto">
          <p class="col-md-2">注文ステータス</p>
          <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
            <%= f.select :status, [["入金待ち","waiting_for_payment"],
                                   ["入金確認","payment_confirmation"],
                                   ["製作中","in_production"],
                                   ["発送準備中","preparing_for_shipment"],
                                   ["発送済み","shipped"]] %>
            <%= f.submit "更新", class:'btn btn-success' %>
          <% end %>
        </div>
      </div>
      <div class="d-flex">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |detail| %>
            <tr>
              <td>
                <%= detail.item.name %>
              </td>
              <td>
                <%= detail.tax_price %>
              </td>
              <td>
                <%= detail.item_count %>
              </td>
              <td>
                <%= detail.subtotal %>
              </td>
              <td>
                <%= form_with model: detail, url: admin_order_detail_path(detail), method: :patch do |f| %>
                  <%= f.select :making_status, [["着手不可","no_production"],
                                                ["製作待ち","waiting_production"],
                                                ["製作中","in_production"],
                                                ["製作完了","completion_production"]] %>
                  <%= f.hidden_field :order_id ,:value=> @order.id %>
                  <%= f.submit "更新", class:'btn btn-success' %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <div class="col-md-4">
          <div class="col-auto">
            <p class="show col-7">商品合計</p><%= @total.to_s(:delimited)+"円" %>
          </div>
          <div class="col-auto">
            <p class="col-7">送料</p><%= 800.to_s(:delimited)+"円" %>
          </div>
          <div class="col-auto">
            <p class="col-7">請求金額合計</p><%= @order.charge.to_s(:delimited)+"円" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>