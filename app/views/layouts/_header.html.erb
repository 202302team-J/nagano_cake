<header>
  <!--管理者側がログインしている時＋２つのアカウントでのログインを許容する -->
  <% if admin_signed_in? %>
    <% if request.fullpath.include? "/admin" %>
      <li>
        <%= link_to "商品一覧", admin_items_path %>
      </li>
      <li>
        <%= link_to "会員一覧", admin_customers_index_path %>
      </li>
      <li>
        <%= link_to "注文履歴一覧", admin_homes_top_path %>
      </li>
      <li>
        <%= link_to "ジャンル一覧", admin_genres_index_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "マイページ", public_customers_show_path(current_customer) %>
      </li>
      <li>
        <%= link_to "商品一覧", public_items_index_path %>
      </li>
      <li>
        <%= link_to "カート", public_cart_items_index_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
    <% end %>

  <!--顧客側がログインしている時 -->
  <% elsif customer_signed_in? %>
      <li>
        <%= link_to "マイページ", public_customers_show_path(current_customer) %>
      </li>
      <li>
        <%= link_to "商品一覧", public_items_index_path %>
      </li>
      <li>
        <%= link_to "カート", public_cart_items_index_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>

  <!--ログインしていない時 -->
  <% else %>
    <li>
      <%= link_to "About", public_homes_about_path %>
    </li>
    <li>
      <%= link_to "商品一覧", public_items_index_path %>
    </li>
    <li>
      <%= link_to "新規登録", new_customer_registration_path %>
    </li>
    <li>
      <%= link_to "ログイン", new_customer_session_path %>
    </li>
  <% end %>
</header>