<div class="container">
  <h2 class="mt-5">マイページ</h2>
  <div class="row">
    <div class="col-12">
      <div class="field col-md-5 mt-3">
        <h4>登録情報　 <%= link_to "編集する", public_customers_information_edit_path(@customer), class: "btn btn-success" %></h4>

      </div>
      <table class="table table-bordered mt-3">
        <tr>
          <td class="col-3">氏名</td>
          <td><%= @customer.family_name %> <%= @customer.personal_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.family_name_ruby %> <%= @customer.personal_name_ruby %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address%></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <table>
        <tr>
          <td>配送先　　　<%= link_to "一覧を見る", public_destinations_path(@customer), class:"btn btn-primary btn-sm" %></td>
        </tr>
        <tr>
          <td>注文履歴　　<%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary btn-sm" %></td>
        </tr>
      </table>
      <div class="pb-lg-5" ></div>
      <!--↑ページ下の空白。-->
    </div>
  </div>
</div>