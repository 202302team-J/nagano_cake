<div class="container mt-3 add-font">
  <div class="row">
    
    <!--ジャンルを絞り込むサイドバー（未実装）-->
   <div class="col-2">
    <table class="table table-borderless">
     <thead>
      <tr>
       <th>ジャンル検索</th>
      </tr>
     </thead>
     <tbody>
      <% @genres.each do |item_genre| %>
      <tr>
       <td><%= link_to item_genre.name, items_path, class: 'text-reset', style: "text-decoration: green underline" %></td>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>
    
   <div class="col-10 mx-auto">
    <div class="d-flex">
     <h2>商品一覧</h2> <h4 class="mt-3">（全<%= @items_all.count %>件）</h4>
    </div>
    <div class="d-flex align-content-start flex-wrap">
     <% @items.each do |item| %>
      <div class="item col">
       <%= link_to item_path(item) do %>    
       <%= image_tag item.get_image(160,200) %>
       <% end %>
       <div class="item"><%= item.name %></div>
       <div class="item">¥<%= item.price.to_s(:delimited) %></div>
      </div>
     <% end %>
    </div>

    <div class="col-12 mt-4">
     <%= paginate @items %>
    </div>
   </div>
  </div>
  
  <div class="pb-lg-5" ></div>
</div>