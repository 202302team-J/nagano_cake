 <div class="row add-font">
   <div class="col-8 ml-5">
   <h1>配送先登録/一覧</h1>

    <%= form_with model: @destination, url: destinations_path, method: :post do |f| %>

    <div class="row mt-2">
      <p class="col-md-3">郵便番号</p>

      <div class="field col-md-9">
        <%= f.text_field :postcode %>
      </div>
      </div>

      <div class="row mt-2">
      <p class="col-md-3">住所</p>
      <div class="field col-md-9">
        <%= f.text_field :address, :size=>"60" %>
      </div>
      </div>
          <div class="row mt-2">
      <p class="col-md-3">宛名</p>

      <div class="field col-md-9">
        <%= f.text_field :name %>
      </div>
      </div>

       <%= f.submit "新規登録", class: "btn btn-success submit" %>
     </div>
    </div>
     <% end %>
  </div>
    <div class="col-7 ml-4 mt-4">
   <table class="table table-bordered">
    <thead>
      <tr class="table-info">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </head>
    <tbody>
         <%  @destinations.each do |destinations|  %>
      <tr>
          <td><%= destinations.postcode %></td>
          <td><%= destinations.address %></td>
          <td><%= destinations.name %></td>
          <td class="mr-2">
              <%= link_to "編集する", edit_destination_path(destinations.id), class: "btn btn-primary" %>
              <%= link_to "削除する", destination_path(destinations.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
          </td>
      </tr>
        <% end %>
     </tbody>
   </table>
  </div>
