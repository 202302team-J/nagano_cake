<div class="row">
  <div class="col-8 ml-5">
   <h2>配送先編集</h2>
    <%= form_with model: @destination, url: public_destinations_path do |f| %>

      <div class= "form-group">
      <label class="col-md-4">郵便番号(ハイフンなし)</label>
      <%= f.text_field :postcord %>
     </div>

     <div class= "form-group">
      <label class="col-md-4">住所</label>
      <%= f.text_field :address, :size=>"60" %>
     </div>

     <div class= "form-group">
      <label class="col-md-4">宛名</label>
      <%= f.text_field :name %>
     </div>

      <%= f.submit "編集内容を登録", class: "btn btn-success submit" %>

     <% end %>