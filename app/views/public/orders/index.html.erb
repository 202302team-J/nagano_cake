
    <h1>注文履歴一覧</h1>
      <table>
          <% @orders.each do |order| %>
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                〒<%= order.ship_postcode %><br>
                <%= order.ship_address %><br>
                <%= order.ship_name %><br>
              </td>
              <td>
                <% order.cart_items.all.each do |f| %>
                  <%= f.item_name %>
                <% end %>
              </td>
              <td><%= order.charge %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示する", public_order_path, class: 'btn btn-primary' %></td>
            </tr>
            <% end %>
          </tbody>
      </table>



