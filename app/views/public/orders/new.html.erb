

<h2>注文情報入力</h2>
  <%= form_with(model: @order, url: public_orders_payment_method_path, method: :post, local: true) do |f| %>
   <table class= "table">
     <tbody>
       <tr>
         <th scope='row'>支払い方法</th>
         <td><div class= "radio">
           <%= f.radio_button :payment, 0 %>
           <label class="payment-label"> クレジットカード</label>
           <%= f.radio_button :payment, 1 %>
           <label class="payment-label"> 銀行振込</label>
         </div></td>
       </tr>
       <tr>
          <th scope='row'>お届け先</th>
           <td><div class= "radio">
             <%= radio_button_tag(:selected_address, :radio1) %>
             <%= label_tag(:selected_address, "ご自身の住所") %>
             <p><%=  @customer.postcorde %><%=  @customer.address %></p>
             <p><%=  @customer.first_name %><%= @customer.last_name %></p>
         </div>
           <div class='radio'>
             <%= radio_button_tag(:selected_address, :radio2) %>
             <%= label_tag(:selected_address, "登録済住所から選択") %>
            <p>&emsp;
             <%= collection_select(:regestrated_address, :regestrated_address, current_customer.addresses.all, :id, :full_address, prompt: "住所を選択してください" ) %>
            </p>
           </div>
           <div class='radio'>
              <%= radio_button_tag(:selected_address, :radio3) %>
              <%= label_tag(:selected_address, "新しいお届け先") %>
            <div class= 'field'>
             <label class='postcord-label'>郵便番号（ハイフンなし）</label>
             　　<%= f.text_field :postcord %>
             <label class='address-label'>住所</label>
              　<%= f.text_field :address %>
             <label class='name_label'>宛名</label>
                <%= f.text_field :name %>
            </div>
           </div>
         </td>
       </tr>
     </tbody>
   </table>
      <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>

