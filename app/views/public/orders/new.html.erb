

<h2>注文情報入力</h2>
<!--支払い方法の選択-->
    <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>

         <h1>支払い方法</h1>
           <%= f.radio_button :payment_method, 0,checked: "checked"%>
           <%= f.label :payment_method, "クレジットカード" %>

           <%= f.radio_button :payment_method, 1 %>
           <%= f.label :payment_method, "銀行振込" %>
     <% end %>
       <!-- 会員登録時の住所を表示させる-->
        <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>

          <h1>お届け先</h1>
               <!--自身の住所の場合＝＝０として設定する。-->
             <%= f.radio_button :address_option, 0, checked: "checked" %>
             <%= f.label :order_address, "ご自身の住所" %><br>

             〒<%=  @customer.postcode %>
               <%=  @customer.address %>

               <%=  @customer.family_name %>
               <%= @customer.personal_name %>
             </p>
         <% end %>
           <!--登録してある配送先住所をプルダウンの中から選択する-->
         <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
               <!--登録した住所の場合＝＝１として設定する。-->
                <%= f.radio_button :address_option, 1 %>
                <%= f.label :order_address, "登録済住所から選択" %><br>

                <%= f.collection_select :customer_id, @addresses, :id, :address_display, prompt: "住所を選択してください" %>
              　<!--第一引数メソッド名　:customer_id　にひもづく　adresses.
              　         コントローラの　@adresses = current_customer.adresses.all
                                      　:id, :full_adresses　カラムをとってくる-->
          <% end %>

          <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>

                <%= f.radio_button :address_option, 2  %>
                <%= f.label :order_address, "新しいお届け先" %>

            <table class= 'table'>
             <tr>
               <td><%= f.label :ship_postcode, "郵便番号(ハイフンなし)" %></td>
               <td><%= f.text_field :ship_postcode %></td>
             </tr>
             <tr>
                <td><%= f.label :ship_address, "住所" %></td>
                <td><%= f.text_field :ship_address %></td>
             </tr>
             <tr>
               <td><%= f.label :ship_name, "宛名" %></td>
               <td><%= f.text_field :ship_name %></td>
             </tr>
            </table>
          <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
          <% end %>
