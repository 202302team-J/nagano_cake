<div class="container">
  <div class="row">

<h2>注文履歴詳細</h2>

   <a>注文情報</a>
   <table class="table">
     <tbody>
       <tr>
         <td>注文日</td>
         <td><%= @order.created_at.to_s %></td>
       </tr>
       <tr>
         <td>発送先</td>
         <td>
           <%= @order.postcode %>
           <%= @order.address %>
           <%= @order.name %>
         </td>
       </tr>
       <tr>
         <td>支払方法</td>
         <td><%= @order.payment_method %></td>
       </tr>
       <tr>
         <td>ステータス</dh>
         <td><%= @order.status %></td>
         <td><%= @order.status %></td>
       </tr>
     </tbody>
   </table>
   <p>請求情報</p>
   <table class="table">
     <tbody>
       <tr>
         <td>商品合計</td>
         <td><%= (@order.charge - @order.postage).to_s(:delimited) %></td>
       </tr>
       <tr>
         <td>配送料</td>
         <td><%= 800.to_s %></td>
       </tr>
       <tr>
         <td>ご請求額</td>
         <td><%= @order.charge.to_s(:delimited) %></td>
       </tr>
     </tbody>
   </table>
   <p>注文内容</p>
   <table class="table">
     <thead>
      <tr>

       <th>商品</th>
       <th>単価（税込）</th>
       <th>個数</th>
       <th>小計</th>
      </tr>
     </thead>
     <tbody>
      <tr>
         <% @order_details.each do |detail| %>
       <td>
         <%= detail.item_name %>
       </td>
       <td>
         ¥<%= detail.tax_price.floor.to_s(:delimited) %>
       </td>
       <td>
         <%= detail.item_count %>
       </td>
       <td>
         ¥<%= drtail.subtotal.floor.to_s(:delimited) %>
       </td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>
 </div>
