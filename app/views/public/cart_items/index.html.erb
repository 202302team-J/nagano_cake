<div class="container ml-5 add-font">
 <div class="row mt-5">
  <h2 class="col-md-5">ショッピングカート</h2>
  <div class="offset-md-5 col-md-2">
   <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
  </div>
 </div>

 <div class="row mt-5">
  <table class='table'>
   <thead>
    <tr>
     <th class= "border border-dark bg-light">商品名</th>
     <th class= "border border-dark bg-light">単価</th>
     <th class= "border border-dark bg-light">数量</th>
     <th class= "border border-dark bg-light">小計</th>
     <th class= "border border-dark bg-light"></th>
    </tr>
   </thead>
   <tbody class= "border border-dark">
    <% @cart_items.each do |item| %>
    <tr>
     <td class= "border border-dark">
      <%= image_tag item.item.get_image(120,75) %>
      <%= item.item.name %>
     </td>
     <td class= "border border-dark"><%= item.item.add_tax_price.to_s(:delimited) %></td>
     <td class= "border border-dark">
      <%= form_with model: item, url: cart_item_path(item.id) do |f| %>
       <%= f.hidden_field :item_id, :value => item.item_id %>
       <%= f.hidden_field :customer_id, :value => current_customer.id %>
       <%= f.select :count, *[1..10], selected: item.count %>
       <%= f.submit "変更", class:'btn btn-success' %>
      <% end %>
     </td>
     <td class= "border border-dark"><%= item.subtotal.to_s(:delimited) %></td>
      <% @total += item.subtotal %>
     <td class= "border border-dark">
      <%= link_to "削除する", cart_item_path(item.id), method: :delete , class: "btn btn-danger"%>
     </td>
    </tr>
    <% end %>
   </tbody>
  </table>
 </div>

 <div class="row">
  <div class="d-flex col-7 my-5 align-middle">
   <%= link_to "買い物を続ける", root_path , class: "btn btn-primary mb-4" %>
  </div>
  <div class="col-2 my-5 border border-dark bg-light align-middle">
   <p class="">合計金額</p>
  </div>
  <div class="col-2 my-5 border border-dark align-middle">
   <P class="font-weight-bold align-middle"><%= @total.to_s(:delimited) %></P>
  </div>

 </div>

 <% unless current_customer.cart_items.empty? %>
 <div class="row offset-md-5 font-weight-bold">
  <%= link_to "情報入力に進む", new_order_path , class: "btn btn-success"%>
 </div>
 <% end %>
 <div class="pb-lg-5" ></div>
</div>
